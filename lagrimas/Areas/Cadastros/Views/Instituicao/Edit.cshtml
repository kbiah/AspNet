@model Modelo.Cadastros.Instituicao

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

@await Html.PartialAsync("_StylesPartial")
@await Html.PartialAsync("_ScriptPartial")
@await Html.PartialAsync("_ValidationScriptsPartial")

<body>
    @await Html.PartialAsync("_DashboardScript")

<div class="row">
    <div class="col-md-4 d-flex align-items-center justify-content-center">
        <center>
            <div id="Modal"></div>
            <div id="Contagem"></div>
        </center>
    </div>
    <div class="col-md-6 pt-3">
        <div class="card-block shadow pb-4 pt-4">
            <div class="card-header text-center h3 titulo border-0 pb-3">Alterando uma instituição existente</div>
            <div class="card-body pt-2">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="InstituicaoID" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Endereco" class="control-label pt-3"></label>
                        <input asp-for="Endereco" class="form-control" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center border-0 pt-3">
                        <a asp-action="Index" class="btn btn-transparent">Retornar à listagem de instituições</a>
                        <input type="submit" value="Atualizar Instituição" class="btn btn-b" />
                    </div>
                </form>
            </div>
        </div>
    </div><div class="col-md-2"></div>
</div>
</body>
