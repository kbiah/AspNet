@model Modelo.Cadastros.Instituicao

@{
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
              asp-fallback-href="~/lib/font-awesome/css/all.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
}

<div class="card-block" style="padding-left:4rem; padding-right:4rem">
    <div class="card-header text-white text-center h3" style="background-color:#5E6EAC">Apagar uma Instituição</div>

   @{await Html.RenderPartialAsync("~/Areas/Cadastros/Views/Instituicao/_PartialDetailsContentCard.cshtml", Model); }

    <div class="card-footer bg-transparent text-center text-white">
        <form asp-action="Delete">
            <input type="hidden" asp-for="InstituicaoID" />
            <a asp-action="Index" class="btn btn-transparent">Retornar à listagem de instituições</a>
            <input type="submit" value="Remover Instituição" class="btn text-white" style="background-color:#5E6EAC" />
        </form>
    </div>
</div>

@section ScriptPage {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}