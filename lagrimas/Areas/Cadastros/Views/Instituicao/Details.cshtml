@model Modelo.Cadastros.Instituicao


@{
    Layout = "_LayoutIES";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/font-awesome.min.css"
              asp-fallback-href="~/lib/font-awesome/css/all.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
}

<div class="card-block" style="padding-left:4rem; padding-right:4rem">
    <div class="card-header text-white text-center h3" style="background-color:#5E6EAC">Exibindo uma instituição existente</div>

   @{await Html.RenderPartialAsync("~/Areas/Cadastros/Views/Instituicao/_PartialDetailsContentCard.cshtml", Model); }
    

    <div class="card-footer text-center text-white">
        <a asp-action="Index" class="btn btn-transparent">Retornar à listagem de instituições</a>
        <a asp-action="Edit" class="btn text-white" asp-route-id="@Model.InstituicaoID" style="background-color:#5E6EAC">Alterar</a>
    </div>
</div>