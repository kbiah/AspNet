@model Modelo.Cadastros.Departamento

@{
    Layout = "_LayoutIES";
}

@await Html.PartialAsync("_StylesPartial")
@await Html.PartialAsync("_ScriptPartial")

<div class="row">
    <div class="col-md-4 d-flex align-items-center justify-content-center">
        <center>
            <img src="~/images/livraria-digital.png" class="img-fluid" alt="departamentos">
        </center>
    </div>
    <div class="col-md-6">
        <div class="card-block">
            <div class="card-header text-center h3 titulo border-0 pb-3">Exibindo uma departamento existente</div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="DepartamentoID" class="control-label"></label>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa-regular fa-key" aria-hidden="true"></i>
                        </span>
                        <input asp-for="DepartamentoID" class="form-control" disabled="disabled" />
                    </div>
                    <label asp-for="Nome" class="control-label"></label>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa-regular fa-user" aria-hidden="true"></i>
                        </span>
                        <input asp-for="Nome" class="form-control" disabled="disabled" />
                    </div>
                    <label asp-for="Instituicao.Nome" class="control-label"></label>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa-regular fa-user" aria-hidden="true"></i>
                        </span>
                        <input asp-for="Instituicao.Nome" class="form-control" disabled="disabled" />
                    </div>
                </div>
            </div>
            <div class="card-footer text-center border-0 pt-3">
                <a asp-action="Index" class="btn btn-transparent">Retornar à listagem de departamentos</a>
                <a asp-action="Edit" class="btn btn-b" asp-route-id="@Model.DepartamentoID">Alterar</a> 
            </div>
        </div>
    </div>
</div>

