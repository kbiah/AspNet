@model Modelo.Cadastros.Departamento

@{
    Layout = "_LayoutIES";
}

@await Html.PartialAsync("_StylesPartial")
@await Html.PartialAsync("_ScriptPartial")
@await Html.PartialAsync("_DashboardScript")

<div class="row">
    <div class="col-md-4 d-flex align-items-center justify-content-center">
        <center>
            <div id="Contagem"></div>
        </center>
    </div>
    <div class="col-md-6">
        <div class="card-block">
            <div class="card-header text-center h3 titulo border-0 pb-3">
                Deletar um departamento
            </div>

            @{ await Html.RenderPartialAsync("~/Areas/Cadastros/Views/Departamento/_PartialDetailsContentCard.cshtml", Model); }

            <div class="card-footer bg-transparent text-center border-0 pt-3">
                 <a asp-action="Index" class="btn btn-transparent">Retornar à listagem de Departamentos</a>
                <button type="button" class="btn btn-b" data-toggle="modal" data-target="#modalConfirmationDelete">
                    Remover Departamento
                 </button>
             </div>
        </div>
    </div>
</div>

            @*MODAL*@
    <div class="modal fade" id="modalConfirmationDelete" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModal">Remoção de Departamento</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Confirma a exclusão do departamento @Model.Nome.ToUpper()?</p>
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="DepartamentoID" />
                        <button type="button" class="btn btn-transparent" data-dismiss="modal">Fechar</button>
                        <input type="submit" value="Remover Departamento" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
