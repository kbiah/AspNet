@model Modelo.Cadastros.Departamento


@{
    Layout = "_LayoutIES";
}

    @await Html.PartialAsync("_StylesPartial")
@await Html.PartialAsync("_ScriptPartial")
@await Html.PartialAsync("_ValidationScriptsPartial")

<div class="row">
    <div class="col-md-4 d-flex align-items-center justify-content-center">
        <center>
            <img src="~/images/livraria-digital.png" class="img-fluid" alt="departamentos">
        </center>
    </div>
    <div class="col-md-6">
        <div class="card-block">
            <div class="card-header text-center h3 titulo border-0 pb-3">
                    Registrando um novo departamento
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="InstituicaoID" class="control-label"></label>
                        <select asp-for="InstituicaoID" class="form-control" asp-items="@(new SelectList(@ViewBag.Instituicoes, "InstituicaoID", "Nome"))"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Cursos" class="control-label"></label>
                        <input asp-for="Cursos" class="form-control" />
                        <span asp-validation-for="Cursos" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center border-0 pt-3">
                        <a asp-action="Index" class="btn btn-transparent">Retornar à listagem de departamentos</a>
                    <input type="submit" value="Registrar Departamento" class="btn btn-b" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
