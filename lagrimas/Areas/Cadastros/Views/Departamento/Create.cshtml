@model Modelo.Cadastros.Departamento


@{
    Layout = "_LayoutIES";
}

<head>
    <link rel="stylesheet" href="~/css/site.css">
</head>

<div class="row">
    <div class="col-md-4 d-flex align-items-center justify-content-center">
        <center>
            <img src="~/images/livraria-digital.png" class="img-fluid" alt="departamentos" class="img-lado">
        </center>
    </div>
    <div class="col-md-8">
        <div class="card-block">
            <div class="card-header text-white text-center h3">
                    Registrando um novo departamento
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="InstituicaoID" class="control-label"></label>
                        <select asp-for="InstituicaoID" class="form-control" asp-items="@(new SelectList(@ViewBag.Instituicoes, "InstituicaoID", "Nome"))"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center h3">
                        <a asp-action="Index" class="btn">Retornar à listagem de departamentos</a>
                    <input type="submit" value="Registrar Departamento" class="btn text-white btn-b" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

    @section ScriptPage {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
         }
    }