@model Modelo.Cadastros.Departamento

@{
Layout = "_LayoutIES";
}

<head>
    <link rel="stylesheet" href="~/css/site.css">
</head>

<div class="row">
    <div class="col-md-4 d-flex align-items-center justify-content-center">
        <center>
            <img src="~/images/livraria-digital.png" class="img-fluid" alt="departamentos" class="img-lado">
        </center>
    </div>
    <div class="col-md-8">
        <div class="card-block">
            <div class="card-header text-white text-center h3">Alterando um departamento existente</div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DepartamentoID" />
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="InstituicaoID" class="control-label"></label>
                        <select asp-for="InstituicaoID" class="form-control" asp-items=@ViewBag.Instituicoes></select>
                    </div>

                    <div class="form-group text-center h3">
                        <a asp-action="Index" class="btn btn-transparent">Retornar à listagem de departamentos</a>
                        <input type="submit" value="Atualizar Departamento" class="btn text-white btn-b" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}