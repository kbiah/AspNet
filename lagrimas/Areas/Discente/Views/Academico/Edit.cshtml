@model Modelo.Discente.Academico

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

@await Html.PartialAsync("_StylesPartial")
@await Html.PartialAsync("_ScriptPartial")
@await Html.PartialAsync("_ValidationScriptsPartial")

<div class="row">
    <div class="col-md-4 d-flex align-items-center justify-content-center">
        <center>
            <img src="~/images/ensino-on-line.png" class="img-fluid pb-2" alt="instituições">
        </center>
    </div>
    <div class="col-md-6">
        <div class="card-block">
            <div class="card-header text-center h3 titulo border-0 pb-3">
                Editar um acadêmico existente
            </div>
            <div class="card-body tabelas">
                <form enctype="multipart/form-data" asp-action="Edit">
                    <input type="hidden" asp-for="AcademicoID" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group pb-1">
                        <label asp-for="RegistroAcademico" class="control-label"></label>
                        <input asp-for="RegistroAcademico" class="form-control" />
                        <span asp-validation-for="RegistroAcademico" class="text-danger"></span>
                    </div>
                    <div class="form-group pb-1">
                        <label asp-for="Nome" class="control-label">
                        </label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group pb-1">
                        <label asp-for="Nascimento" class="control-label">
                        </label>
                        <input asp-for="Nascimento" class="form-control" />
                        <span asp-validation-for="Nascimento" class="text-danger"></span>
                    </div>
                    <div class="form-group pb-1">
                        <label class="control-label">Foto</label>
                        <input type="file" name="foto" class="form-control" />
                    </div>
                    <div class="col-3">
                        <img class="img-thumbnail" src="@Url.Action("GetFoto", "Academico", new { id = Model.AcademicoID })" />
                        @Html.ActionLink("Download", "DownloadFoto", "Academico", new { id = Model.AcademicoID }, null)
                        <form>
                            <div class="checkbox pb-1">
                                <label>
                                    <input type="checkbox" name="chkRemoverFoto" value="Sim">
                                    Remover Foto
                                </label><br /><br />
                            </div>
                        </form>
                    </div>
                    <div class="form-group text-center btn-transparent border-0 pt-3">
                        <a asp-action="Index" class="btn btn-transparent">Retornar à listagem de acadêmicos</a>
                        <input type="submit" value="Editar Acadêmico" class="btn btn-b" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

