@model Modelo.Discente.Academico

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

@await Html.PartialAsync("_StylesPartial")
@await Html.PartialAsync("_ScriptPartial")


<div class="row">
    <div class="col-md-4 d-flex align-items-center justify-content-center">
        <center>
            <img src="~/images/ensino-on-line.png" class="img-fluid" alt="instituições" />
        </center>
    </div>
    <div class="col-md-6">
        <div class="card-block">
            <div class="card-header text-center h3 titulo border-0 pb-3">
                Exibindo um acadêmico existente
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-9">
                        <div class="form-group">
                            <label asp-for="AcademicoID" class="control-label pt-2"></label>
                            <br />
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-key p-1"></i>
                                    </span>
                                </div>
                                <input asp-for="AcademicoID" class="form-control" disabled="disabled" />
                            </div>
                            <label asp-for="RegistroAcademico" class="control-label pt-3"></label>
                            <br />
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa-regular fa-address-card p-1" aria-hidden="true"></i>
                                    </span>
                                </div>
                                <input asp-for="RegistroAcademico" class="form-control" disabled="disabled" />
                            </div>
                            <label asp-for="Nome" class="control-label pt-3"></label>
                            <br />
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa-regular fa-user-circle p-1" aria-hidden="true"></i>
                                    </span>
                                </div>
                                <input asp-for="Nome" class="form-control" disabled="disabled" />
                            </div>
                            <label asp-for="Nascimento" class="control-label pt-3"></label>
                            <br />
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa-regular fa-id-card p-1" aria-hidden="true"></i>
                                    </span>
                                </div>
                                <input asp-for="Nascimento" class="form-control" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="col-3 pt-4">
                        <img class="img-thumbnail" src="@Url.Action("GetFoto", "Academico", new { id = Model.AcademicoID })" />
                        @Html.ActionLink("Download", "DownloadFoto", "Academico", new { id = Model.AcademicoID }, null)
                    </div>
                </div>
            </div>
            <div class="card-footer text-center btn-transparent pt-3">
                <a asp-action="Index" class="btn btn-transparent">Retornar à listagem de acadêmicos</a>
                <a asp-action="Edit" class="btn text-white btn-b" asp-route-id="@Model.AcademicoID">Editar</a>
            </div>
        </div>
    </div>
</div>
