@inject Microsoft.AspNetCore.Identity.UserManager<lagrimas.Models.Infra.UsuarioDaAplicacao> UserManager﻿


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - atividade </title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap-grid.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="header">
       <div class="container">
           <div class="row">
               <div class="col-sm-4 p-0" style="background-color:rgb(255, 255, 255); height:auto">
                   <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                       <img src="~/images/drops_599508.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                            Lagrimas.Net
                        </a>
               </div>
           </div>
       </div>
    </div>

    <div class="container">
       <div class="row" style="background-color:#5E6EAC">
            <div class="col-12">
                    <nav class="navigation navbar navbar-expand navbar-dark" >
                        <div class="collapse navbar-collapse" id="navbarsExample04">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                        Início
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-item nav-link text-white" asp-area="Cadastros" asp-controller="Instituicao" asp-action="Index">
                                    Instituições</a>
                                </li>
                                 <li class="nav-item">
                                    <a class="nav-item nav-link text-white" asp-area="Cadastros" asp-controller="Departamento" asp-action="Index">
                                    Departamentos</a>
                                  </li>
                                 <li class="nav-item">
                                    <a class="nav-item nav-link text-white" asp-area="Discente" asp-controller="Academico" asp-action="Index">
                                       Academicos
                                      </a>
                                 </li>
                                 <li class="nav-item">
                                    <a class="nav-item nav-link text-white" asp-area="Docente" asp-controller="Professor" asp-action="AdicionarProfessor">
                                      Professores
                                      </a>
                                 </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
        <!-- end header -->

    <div class="row" style="text-align:right;">
        <div class="col-6"></div>
        <div class="col-5">
            @if (SignInManager.IsSignedIn(User))
            {
                <div>Olá @UserManager.GetUserName(User), seja bem-vindo(a)  /  @Html.ActionLink("Sair", "Sair", "Infra", new { area = "" })</div>
            }
            else
            {
                <a class="nav-item nav-link" asp-area="" asp-controller="Infra" asp-action="Acessar">
                    Informar usuário para acessar
                </a>
            }
        </div>
        <div class="col-1"></div>
    </div>
    <br />
    <center>
        <div class="col-12" style="height:auto">
            @RenderBody()
        </div>
    </center>

